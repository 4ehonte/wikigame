<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/start_phrase_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/arrow"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Start phrase" />

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" â†’ "
        app:layout_constraintEnd_toStartOf="@id/target_phrase_tv"
        app:layout_constraintStart_toEndOf="@id/start_phrase_tv" />

    <TextView
        android:id="@+id/target_phrase_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/clicks_tv"
        app:layout_constraintStart_toEndOf="@id/arrow"
        tools:text="Target phrase" />


    <TextView
        android:id="@+id/clicks_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/time_tv"
        tools:text="4" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="01:54" />


</androidx.constraintlayout.widget.ConstraintLayout>